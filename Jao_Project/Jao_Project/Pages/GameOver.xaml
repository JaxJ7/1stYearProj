<Page x:Class="Jao_Project.Pages.GameOver"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Jao_Project.Pages"
      mc:Ignorable="d" Loaded="GameOver_OnLoaded"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GameOver">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.6*"/>
            <RowDefinition Height="0.6*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>



        <TextBlock x:Name="EndInfo"  Grid.Row="1"  Foreground="White"  HorizontalAlignment="Center" FontFamily="GothicI" FontSize="48"></TextBlock>

        <StackPanel Grid.Row="2">
            <TextBlock  Text="Restart?" Foreground="White"  HorizontalAlignment="Center" FontFamily="GothicI" FontSize="18"></TextBlock>
            <Button x:Name="Continue" Margin="300,10,300,0" Height="40" Content="Ok" FontFamily="GothicI" FontSize="16" Click="Continue_Click"></Button>
        </StackPanel>
        </Grid>
</Page>
